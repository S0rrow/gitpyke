{
    "name": "Python 3.11 FastAPI",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md",
          "app.py"
        ]
      },
      "vscode": {
        "settings": {},
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ]
      }
    },
    "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'",
    "postAttachCommand": {
      "server": "uvicorn app:app --host 0.0.0.0 --port 8000"
    },
    "portsAttributes": {
      "8000": {
        "label": "FastAPI Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [
      8000
    ]
  }